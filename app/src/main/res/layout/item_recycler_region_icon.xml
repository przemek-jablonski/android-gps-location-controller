<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@color/app_triadic_purple_lighter_alpha"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="1dp"
    android:layout_marginEnd="1dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:layout_gravity="center"
    android:gravity="center">
    
    <ImageView
        android:id="@+id/item_recycler_region_imageview"
        android:padding="8dp"
        android:background="@color/app_triadic_purple_lighter_alpha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_hotel_black_24dp"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_recycler_region_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="location nazwa tutej"
            android:lines="1"
            android:textStyle="bold"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/item_recycler_region_policy"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="policyname"
            android:lines="1"
            android:ellipsize="end"
            android:textAllCaps="true" />





    </LinearLayout>

</LinearLayout>